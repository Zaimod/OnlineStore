<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/css/bootstrap.min.css" rel="stylesheet" type="text/css">
</head>
<body>
    <nav class="navbar navbar-expand-md navbar-dark bg-dark">
        <a class="navbar-brand" asp-controller="Home" asp-action="Index">ShopHW</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarCollapse">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" asp-controller="Home" asp-action="Index">Головна<span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Goods/List" asp-action="Index">Весь товар</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Goods/List/Процесори" asp-action="Index">Процесори</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Goods/List/Відеокарти" asp-action="Index">Відеокарти</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link"asp-controller="ShopCart" asp-action="Index">Корзина</a>
                </li>
            </ul>
            <form class="form-inline mt-2 mt-md-0">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-link">
                        <a class="btn-link" asp-controller="Account" asp-action="Register">Реєстрація</a>
                    </li>
                    <li class=nav-link>
                        <a class="btn-link" asp-controller="Account" asp-action="Login">Ввійти</a>
                    </li>
                </ul>
            </form>
        </div>
    </nav>
    <div class="container mt-5">
        @RenderBody()
    </div>
    <footer class="container">
        <p class="float-right"><a href="#">Back to top</a></p>
        <p>© 2019 Всі права захищені · <a href="#">Соглашение</a></p>
    </footer>
    <script src="~/js/bootstrap.min.js"></script>

</body>
</html>
