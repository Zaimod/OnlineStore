@model ProjectApp.Models.Goods

    <div class="card h-100">
        <img class="figure-img" src="@Url.Content("~/img/" + Model.img)" height="400" />
        <div class="card-body">
            <h4 class="card-title">@ViewBag.Category1 @Model.name</h4>
            <p>@ViewBag.isAvailable</p>
            <h4>@Model.price.ToString() грн</h4>
            <a class="btn btn-primary" role="button" asp-controller="ShopCart" asp-action="AddToCart" asp-route-id="@Model.id">Добавити в кошик</a>
        </div>
        <div class="container">
            <!-- Nav tabs -->
            <ul class="nav nav-tabs" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" data-toggle="tab" href="#home">Опис</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-toggle="tab" href="#menu1">Характеристики</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-toggle="tab" href="#menu2">Інформація для замовлення</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-toggle="tab" href="#menu3">Відгуки</a>
                </li>
            </ul>

            <!-- Tab panes -->
            <div class="tab-content">
                <div id="home" class="container tab-pane active">
                    <br>
                    <p>@ViewBag.Desc</p>
                </div>
                <div id="menu1" class="container tab-pane fade">
                    <br>
                    <table class="table table-striped">
                        <tbody>
                            <tr>
                                <td>Виробник</td>
                                <td>@ViewBag.Maker</td>
                            </tr>
                            <tr>
                                <td>Призначення</td>
                                <td></td>
                            </tr>
                            <tr>
                                <td>Обсяг відеопам'яті</td>
                                <td></td>
                            </tr>
                            <tr>
                                <td>Тип відеопам'яті</td>
                                <td></td>
                            </tr>
                            <tr>
                                <td>Графічний чіпсет</td>
                                <td></td>
                            </tr>
                            <tr>
                                <td>Розрядність шини пам'яті</td>
                                <td></td>
                            </tr>
                            <tr>
                                <td>Частота процесора</td>
                                <td></td>
                            </tr>
                            <tr>
                                <td>Частота відеопам'яті</td>
                                <td></td>
                            </tr>
                            <tr>
                                <td>Тип підключення</td>
                                <td></td>
                            </tr>
                            <tr>
                                <td>Інтерфейси</td>
                                <td></td>
                            </tr>
                            <tr>
                                <td>Довжина</td>
                                <td></td>
                            </tr>
                            <tr>
                                <td>Стан</td>
                                <td></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div id="menu2" class="container tab-pane fade">
                    <br>
                    <p>Ціна: @Model.price.ToString() грн</p>
                </div>
                <div id="menu3" class="container tab-pane fade">
                    <br>                  
                    <a class="btn btn-outline-primary" role="button" href="#">Додати відгук</a>
                </div>
            </div>
        </div>
    </div>