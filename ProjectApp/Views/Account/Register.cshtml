@model ProjectApp.ViewsModels.RegisterModel

<h2>Реєстрація</h2>

<form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly" />
    <div>
        <div>
            <label asp-for="first_name">Введіть ім'я</label><br />
            <input type="text" asp-for="first_name" />
            <span asp-validation-for="first_name" />
        </div>
        <div>
            <label asp-for="last_name">Введіть Прізвище</label><br />
            <input type="text" asp-for="last_name" />
            <span asp-validation-for="last_name" />
        </div>
      
        <div>
            <label asp-for="phone">Введіть Номер моб. телефону</label><br />
            <input type="text" asp-for="phone" />
            <span asp-validation-for="phone" />
        </div>
        <div>
            <label asp-for="email">Введіть Email</label><br />
            <input type="text" asp-for="email" />
            <span asp-validation-for="email" />
        </div>
        <div>
            <label asp-for="password">Введіть пароль</label><br />
            <input asp-for="password" />
            <span asp-validation-for="password" />
        </div>
        <div>
            <label asp-for="ConfirmPassword">Ще раз</label><br />
            <input asp-for="ConfirmPassword" />
            <span asp-validation-for="ConfirmPassword" />
        </div>
        <div>
            <input type="submit" value="Зареєструватися" class="btn-danger" />
        </div>
    </div>
</form>
              
            
               