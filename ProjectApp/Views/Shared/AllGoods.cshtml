@model ProjectApp.Models.Goods

<div class="col-md-4 col-sm-6">
    <div class="product-card mb-4">
        @ViewBag.gt
        <div class="product-thumb">
            <a class="product-thumb-link" asp-controller="Item/" asp-action="Index" asp-route-name="@Model.name"></a>
            <span class="product-wishlist-btn" data-toggle="tooltip" data-placement="left" title="" data-original-title="Додати до улюблених"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-heart"><path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"></path></svg></span><img src="@Url.Content("~/img/" + Model.img)" alt="Product">
        </div>

        <div class="product-card-body">
            <div class="d-flex flex-wrap justify-content-between pb-1">
                <a class="product-meta" asp-controller="Goods/List/@Model.Category.Name" asp-action="Index">@Model.Category.Name</a>
                <div class="star-rating"><span class="sr-label mr-1">3.9</span><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-star sr-star active"><polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"></polygon></svg></div>
            </div>
            <h3 class="product-card-title"><a asp-controller="Item/" asp-action="Index" asp-route-name="@Model.name">@Model.name</a></h3><span class="text-primary">@Model.price грн</span>
        </div>
        <div class="product-card-body body-hidden pt-2">
            <a class="btn btn-primary btn-sm btn-block" role="button" asp-controller="ShopCart" asp-action="AddToCart" asp-route-id="@Model.id">Добавити в кошик</a><a class="quick-view-btn" data-toggle="toast" data-target="#compare-toast"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-repeat mr-1"><polyline points="17 1 21 5 17 9"></polyline><path d="M3 11V9a4 4 0 0 1 4-4h14"></path><polyline points="7 23 3 19 7 15"></polyline><path d="M21 13v2a4 4 0 0 1-4 4H3"></path></svg>Порівняти</a>
        </div>
    </div>
</div>
