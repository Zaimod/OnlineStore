
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>@ViewBag.Title</title>
    <link href="~/css/bootstrap.min.css" rel="stylesheet" type="text/css">
    <link rel="stylesheet" media="screen" href="~/css/vendor.min.css">
    <link rel="stylesheet" media="screen" id="main-styles" href="~/css/theme.min.css">
    <link rel="stylesheet" media="screen" href="~/css/customizer.min.css">
</head>
<body>
    <header class="navbar navbar-expand-lg navbar-light fixed-top bg-light">
        <div class="container-fluid navbar-inner">
            <!--Logo-->
            <a class="navbar-brand" asp-controller="Goods/List" asp-action="Index">ShopHW</a>
            <div class="collapse navbar-collapse" id="menu">
                <!--Меню-->
                <ul class="navbar-nav">
                    <li class="nav-item dropdown mega-dropdown active">
                        <a class="nav-link dropdown-toggle" asp-controller="Goods/List" asp-action="Index" data-toggle="dropdown">Головна</a>
                    </li>

                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="dropdown">
                            <a class="nav-link dropdown-toggle" href="#" data-toggle="dropdown">Мій аккаунт</a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="MyCabinet" asp-action="Index">Історія замовлень</a></li>
                                <li class="dropdown-divider"></li>
                                <li><a class="dropdown-item" asp-controller="AccountSet" asp-action="Index">Параметри аккаунта</a></li>
                                <li class="dropdown-divider"></li>
                                <li><a class="dropdown-item" asp-controller="AccountSet" asp-action="AddressSet">Параметри адреси</a></li>
                                <li class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="#">Список вподобань</a></li>
                                <li class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="#">Мої відгуки</a></li>
                                <li class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="#">Відновити пароль</a></li>
                                <li class="dropdown-divider"></li>
                                <li>
                                    <form method="post" asp-controller="Account" asp-action="LogOff">
                                        <button type="submit" class="dropdown-item">Вихід</button>
                                    </form>
                                </li>
                            </ul>
                        </li>
                    }
                    else
                    {
                       
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" asp-controller="Account" asp-action="Register">Реєстрація</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" asp-controller="Account" asp-action="Login">Ввійти</a>
                        </li>
                     
                    }
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" data-toggle="dropdown">Про Нас</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" data-toggle="dropdown">Контакти</a>
                    </li>
                </ul>
            </div>
            @if (User.Identity.IsAuthenticated)
            {
            <!-- navbar buttons-->
                <div class="navbar-btns">
                    <div class="navbar-btns-inner">
                        <a class="navbar-btn" asp-controller="ShopCart" asp-action="Index" data-toggle="offcanvas">
                            <span class="d-block position-relative">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-shopping-cart mx-auto mb-1">
                                    <circle cx="9" cy="21" r="1"></circle>
                                    <circle cx="20" cy="21" r="1"></circle>
                                    <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"></path>
                                </svg>
                            </span>
                        </a>
                    </div>
                </div>
            }
        </div>
    </header>



    <div class="container">

        <div class="row">          
            <div class="col-lg-3">
                <footer>@RenderSection("Footer")</footer>     
            </div>
            <!-- /.col-lg-3 -->

            <div class="col-lg-9">

                <div id="carouselExampleIndicators" class="carousel slide carousel-fade my-4" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#carouselExampleIndicators" data-slide-to="0" class=""></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="1" class=""></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="2" class="active"></li>
                    </ol>
                    <div class="carousel-inner" role="listbox">
                        <div class="carousel-item">
                            <img class="d-block img-fluid" src="~/img/slide-1.jpg" alt="First slide">
                        </div>
                        <div class="carousel-item active carousel-item-left">
                            <img class="d-block img-fluid" src="~/img/slide-2.jpg" alt="Second slide">
                        </div>
                        <div class="carousel-item carousel-item-next carousel-item-left">
                            <img class="d-block img-fluid" src="~/img/slide-3.jpg" alt="Third slide">
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>

                <div class="row">
                    @RenderBody()
                </div>
                <!-- /.row -->
                <nav aria-label="Page Navigation">
                    <ul class="pagination justify-content-center">
                        @if (Model.PageViewModel.HasPreviousPage)
                        {
                            <li class="page-item">

                                <a asp-action="Index" asp-route-page="@(Model.PageViewModel.PageNumber - 1)" class="page-link"><i class="glyphicon glyphicon-chevron-left"></i>Назад</a>
                            </li>
                        }
                        @if (Model.PageViewModel.HasNextPage)
                        {
                            <li class="page-item">
                                <a asp-action="Index" asp-route-page="@(Model.PageViewModel.PageNumber + 1)" class="page-link">Вперед<i class="glyphicon glyphicon-chevron-right"></i></a>
                            </li>
                        }
                    </ul>
                </nav>
            </div>
            <!-- /.col-lg-9 -->

        </div>
        <!-- /.row -->

    </div>
    
    <footer class="py-5 bg-dark">
        <p class="m-0 text-center text-white">© 2019 Всі права захищені</p>
    </footer>

    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/css/jquery.min.js"></script>
    <script src="~/css/bootstrap.bundle.min.js"></script>
</body>
</html>
